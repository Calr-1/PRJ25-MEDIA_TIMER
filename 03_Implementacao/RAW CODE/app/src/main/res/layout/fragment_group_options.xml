<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ui.GroupOptionsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/scrollViewLayoutGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/groupOptionsMainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/groupOptionsSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/groupOptionsSeparatorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/group_options"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_main_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/sequenceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/enableSequenceText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="@string/run_timers_sequentially"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/enableSequenceCB"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"

                        android:layout_margin="6dp"
                        android:gravity="center_vertical|end"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor" />

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/skipZerosLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/enableSkipZerosText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="@string/stops_zeros"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/enableSkipZerosCB"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:gravity="center_vertical|end"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor" />

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/ignoreGroupsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/enableIgnoreGroupsText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="@string/skip_groups"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/enableIgnoreGroupsCB"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"

                        android:layout_margin="6dp"
                        android:gravity="center_vertical|end"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor" />

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/propagateLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/enablePropagateText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:text="@string/propagate_colors"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/enablePropagateCB"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        android:gravity="center_vertical|end"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>