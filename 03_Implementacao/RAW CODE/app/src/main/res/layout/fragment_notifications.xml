<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NotificationsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/scrollViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/notificationsMainLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/progressiveTimerSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/NotificationsText1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/notifications"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_main_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/notificationTypeSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/typeOfNotificationText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/type_of_notifications"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/chooseTypeOfIntervalLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/chooseIntervalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_weight="0.1"
                        android:text="@string/choose_interval_type"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/typeOfIntervalSpinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:entries="@array/notifications_array" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/defineIntervalsByNumberSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/defineIntervalsByNumberText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/define_intervals_by_number"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/intervalNumberLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/NumberOfIntervalsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:text="@string/number_of_intervals"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/inputNumberIntervals"
                        android:layout_width="51dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/number_of_intervals_default"
                        android:textSize="20sp"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/intervalTimeSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="1dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TimeIntervalsSeparatorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/define_intervals_by_time"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/timeNotificationLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TimebetweenIntervals"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="@string/time_between_intervals"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/hoursEditInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_weight="0.2"
                        android:gravity="bottom|center_horizontal"
                        android:hint="@string/hints"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/hours_string"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/hoursIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.02"
                        android:gravity="bottom|center"
                        android:text="@string/separator1"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/minutesEditInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginStart="1dp"
                        android:layout_weight="0.2"
                        android:gravity="bottom|center_horizontal"
                        android:hint="@string/hints"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/minutes_string"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/minutesIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="1dp"
                        android:layout_marginEnd="1dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.02"
                        android:gravity="bottom|center"
                        android:text="@string/separator2"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/secondsEditInterval"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="0dp"
                        android:layout_marginStart="1dp"
                        android:layout_weight="0.2"
                        android:gravity="bottom|center_horizontal"
                        android:hint="@string/hints"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/seconds_string"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/secondsIndicator"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="0.02"
                        android:gravity="bottom|center"
                        android:text="@string/separator3"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/intervalRandomSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/RandomIntervalsSeparatorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/random_intervals"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/randomIntervalMinCheckBoxText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/NumberOfIntervalsMinRandomText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:text="@string/min_number_of_intervals"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/inputNumberIntervalsMinRandom"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/number_of_intervals_default"
                        android:textSize="20sp"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/randomIntervalMaxCheckBoxText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/NumberOfIntervalsMaxRandomText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:text="@string/max_number_of_intervals"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/inputNumberIntervalsMaxRandom"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/number_of_intervals_default"
                        android:textSize="20sp"
                        tools:ignore="LabelFor" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/soundsSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/soundsSeparatorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/sounds"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_main_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />


                <LinearLayout
                    android:id="@+id/intervalsSoundSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/intervalsSoundSeparatorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="@string/intervals_sounds"
                        android:textSize="20sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/intervalSoundLayout"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/chooseIntervalSoundText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:gravity="center_vertical"
                        android:text="@string/choose_intervals_sounds"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/intervalsVolumeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/intervalsVolumeText"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:gravity="center_vertical"
                        android:text="@string/intervals_sound_volume"
                        android:textSize="16sp" />

                    <SeekBar
                        android:id="@+id/intervalsSoundVolumeBar"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:max="100" />

                    <TextView
                        android:id="@+id/intervalsSoundVolume"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.1"
                        android:gravity="center_vertical"
                        android:text="@string/_100" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vibrationsSeparator"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="0dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/vibrationsSeparatorText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:text="@string/vibration"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@drawable/options_main_separator" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="5dp" />

                <LinearLayout
                    android:id="@+id/vibrationsLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/options_delimiter"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/enableVibrationsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="10dp"
                        android:text="@string/enable_vibration"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/enableVibrationsCB"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="6dp"
                        android:importantForAutofill="no"
                        tools:ignore="LabelFor" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>