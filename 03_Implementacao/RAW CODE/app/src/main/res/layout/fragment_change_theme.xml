<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    tools:context=".ui.ChangeThemeFragment">

<LinearLayout
    android:layout_width="0dp"
    android:layout_height="0dp"

    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="1.0">


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/choose_your_theme"
        android:textSize="24sp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/options_main_separator" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="5dp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="1dp"
        android:background="@drawable/options_delimiter"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/chooseBlackColor"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/primaryColorBlack" />

        <TextView
            android:id="@+id/chooseRedBlackColor"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/primaryColorVariantRedBlack" />

        <TextView
            android:id="@+id/chooseGreenColor"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/primaryColorGreen" />

        <TextView
            android:id="@+id/chooseOrangeColor"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/primaryColorOrange" />

        <TextView
            android:id="@+id/chooseBlueGreyColor"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_margin="3dp"
            android:layout_weight="1"
            android:background="@color/primaryColorBlueGrey" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="15dp" />

</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>